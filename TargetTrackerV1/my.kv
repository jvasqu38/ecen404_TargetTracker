WindowManager:
    StartWindow:
    MainWindow:

<StartWindow>:
    name: "start"

    GridLayout:
        cols: 2
        size: root.width, root.height

        Label:
            text: "Welcome to Target Tracker, Press the 'Start' button to begin!"

        Button:
            text: "Start"
            on_press: root.pressed()
            on_press: app.root.current = "main"


<MainWindow>:
    name: "main"
    target_num: target_num

    GridLayout:
        rows:2
        size: root.width, root.height

        GridLayout:
            cols:3
            AsyncImage:
                id: before_image
                source: root.img_path



            AsyncImage:
                id: after_image
                source: root.img_path


            AsyncImage:
                id: pick_target_img
                source: root.img_path


        GridLayout:
            cols:3

            TextInput:
                id: target_num
                multinline: False

            Button:
                text: "switch target"

            Button:
                text: "Submit"
                on_press: root.pressed_main()












